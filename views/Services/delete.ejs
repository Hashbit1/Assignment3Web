<%- include('../partials/header') %>

<h1 class="mb-4 text-danger">Delete Service</h1>

<div class="alert alert-warning">
  <p>Are you sure you want to delete this service record?</p>
  <ul>
    <li><strong>Vehicle:</strong> <%= service.vehicleName %></li>
    <li><strong>Service Type:</strong> <%= service.serviceType %></li>
    <li><strong>Date:</strong> <%= service.serviceDate.toISOString().slice(0,10) %></li>
  </ul>
  <p>This action cannot be undone.</p>
</div>

<form action="/services/<%= service._id %>?_method=DELETE" method="POST">
  <button type="submit" class="btn btn-danger">Yes, delete it</button>
  <a href="/services" class="btn btn-secondary">Cancel</a>
</form>

